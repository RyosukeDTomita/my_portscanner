{
  "name": "dev_container", // 任意
  "dockerComposeFile": [
    "../compose.yaml",
    "compose.yaml"
  ],
  "service": "python-environment", // compose.yamlのサービス名
  "workspaceFolder": "/app",
  "overrideCommand": true, // コンテナを起動したままにする DockerfileのCMDで永続するコマンドを実行しているなら不要
  "postCreateCommand": "./install-pkg.sh",
  "postStartCommand": "PATH=$PATH:$(aqua root-dir)/bin", // DevContainerのビルド前，実行前にローカルでaquaでインストールしたツールのパスを通す
  "postAttachCommand": "PATH=$PATH:$(aqua root-dir)/bin",

  "customizations": {
    "vscode": {
      "extensions": [
        "DavidAnson.vscode-markdownlint",
        "exiasr.hadolint",
        "oderwat.indent-rainbow",
        "ionutvmi.path-autocomplete",
        "ms-python.black-formatter",
        "ms-python.flake8"
      ]
    }
  }
}
